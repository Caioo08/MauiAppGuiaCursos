<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppGuiaCursos.MainPage"
             Background="#121d30"
             Title="">


    <ScrollView>
        <StackLayout VerticalOptions="Center" >
            <Label Text="Olá, seja bem-vindo ao Guia de Desenvolvimento de Sistemas, aqui serão apresentadas as matérias do nosso curso técnico, deseja começar?" HorizontalTextAlignment="Start" Margin="20" FontSize="25"/>
            <Grid RowDefinitions="*" ColumnDefinitions="*,*" RowSpacing="30" ColumnSpacing="20" Padding="0" Margin="15">
                <Button Text="Sim" Grid.Row="0" Grid.Column="0" TextColor="White" FontSize="25" Background="#224" BorderColor="White" BorderWidth=".4" Clicked="Button_Clicked"/>
                <Button Text="Não" Grid.Row="0" Grid.Column="1" TextColor="White" FontSize="25" Background="#224" BorderColor="White" BorderWidth=".4" Clicked="Button_Clicked_1"/>
            </Grid>
        </StackLayout>
    </ScrollView>


</ContentPage>
